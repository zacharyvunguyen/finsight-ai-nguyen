# API Keys
OPENAI_API_KEY=your_openai_api_key                    # Required for OpenAI API access
PINECONE_API_KEY=your_pinecone_api_key               # Required for Pinecone vector database
GOOGLE_CLOUD_PROJECT=your_gcp_project_id             # Your Google Cloud project ID
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key         # Required for LlamaParse API access

# Database Configuration
BIGQUERY_DATASET=financial_data                      # BigQuery dataset name for financial data
PINECONE_INDEX_NAME=financial-reports                # Name of your Pinecone vector index

# Pinecone Configuration
PINECONE_CLOUD=aws                                   # Cloud provider for Pinecone (aws)
PINECONE_REGION=us-east-1                           # Region for Pinecone index
PINECONE_DIMENSION=1536                             # Vector dimension for embeddings
PINECONE_METRIC=cosine                              # Distance metric for vector similarity

# Application Settings
DEBUG_MODE=True                                      # Enable/disable debug logging
PDF_STORAGE_PATH=./data/raw                         # Local path for storing raw PDFs
PROCESSED_DATA_PATH=./data/processed                 # Local path for processed data

# Google Cloud Configuration
GCP_STORAGE_BUCKET=your_gcs_bucket_name             # Name of your Google Cloud Storage bucket
GOOGLE_APPLICATION_CREDENTIALS=config/keys/your-service-account-key.json  # Path to GCP service account key 